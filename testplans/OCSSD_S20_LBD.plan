descr: liblightnvm testplan for Open-Channel 2.0 devices
descr_long: |
  Run the liblightnvm test-suites using only the Linux Block Device backend
hooks: [ sysinf, dmesg ]
evars: { NVM_CLI_BE_ID: 2 }
testsuites:
