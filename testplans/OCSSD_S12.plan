descr: liblightnvm testplan for Open-Channel 1.2 devices
descr_long: |
  Run the liblightnvm test-suites using the different library backends
hooks: [ sysinf, dmesg ]
testsuites:
  - name: OCSSD
    evars: { NVM_CLI_BE_ID: 1 }
  - name: OCSSD
    evars: { NVM_CLI_BE_ID: 2 }
  - name: OCSSD
    evars: { NVM_CLI_BE_ID: 4 }
  - name: OCSSD_S12
    evars: { NVM_CLI_BE_ID: 1 }
    hooks: ["spdk"]
  - name: OCSSD_S12
    evars: { NVM_CLI_BE_ID: 2 }
    hooks: ["spdk"]
  - name: OCSSD_S12
    evars: { NVM_CLI_BE_ID: 4 }
    hooks: ["spdk"]
